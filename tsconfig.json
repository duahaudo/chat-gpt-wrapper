{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "outDir": "./dist",
    "rootDir": "."
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
